{
  "version": "0.1",
  "behavior_id": "dust",
  "description": "Subtle particulate shimmer for depth cues",
  "emission": {
    "mode": "continuous",
    "rate": 18,
    "burst": { "enabled": false, "trigger": "audio_peak", "count": 4, "cooldown_ms": 200 },
    "initial_state": {
      "velocity": { "type": "radial", "min": 0.005, "max": 0.02 },
      "energy": 0.6,
      "size": { "min": 0.4, "max": 0.9 }
    }
  },
  "forces": [
    { "type": "curl_noise", "strength": 0.18, "scale": 0.35, "time_scale": 0.12, "modulate_by": "audio_rms" },
    { "type": "drag", "coefficient": 0.96 }
  ],
  "modulation": {
    "audio_inputs": {
      "rms": { "smoothing_ms": 100, "clamp": [0.0, 0.6] },
      "peak": { "smoothing_ms": 40, "threshold": 0.8 }
    },
    "bindings": [
      { "source": "rms", "target": "curl_noise.strength", "mode": "range", "range": [0.12, 0.24] }
    ]
  },
  "lifecycle": {
    "lifetime_ms": { "min": 2200, "max": 3600 },
    "energy_decay": { "type": "exponential", "rate": 0.4 },
    "size_decay": { "type": "linear", "rate": 0.08 }
  },
  "stability": {
    "max_particles": 300,
    "max_velocity": 1.1,
    "force_clamp": 0.7,
    "bounds": { "mode": "soft", "margin": 56 }
  }
}