{
  "scenario_version": "1.0",
  "id": "monument_smoke_test",
  "name": "Monument Smoke Test",
  "category": "reverb",
  "description": "Basic smoke test to verify adapter works correctly with impulse stimulus",
  "capability_requirements": {
    "required_effect_types": [
      "REVERB"
    ],
    "required_behaviors": [],
    "excluded_behaviors": [],
    "notes": "Quick sanity check for Monument adapter correctness"
  },
  "stimulus": {
    "stimulus_id": "impulse",
    "stimulus_variant": "single",
    "parameters": {
      "magnitude": 0.5,
      "duration_seconds": 2.0
    }
  },
  "parameter_variations": {
    "0": 0.55,
    "1": 0.5,
    "2": 0.5,
    "3": 0.5,
    "4": 0.5,
    "5": 0.5,
    "6": 0.5
  },
  "analysis_windows": {},
  "expected_invariants": {
    "no_nan_inf": {
      "metric": "non_finite",
      "window": "full",
      "threshold": {
        "max": 0
      },
      "severity": "hard_fail",
      "description": "Output must be finite (no NaN/Inf)"
    },
    "reasonable_peak": {
      "metric": "peak_level",
      "window": "full",
      "threshold": {
        "peak_dbfs_max": -0.3
      },
      "severity": "soft_warn",
      "description": "Peak level should not exceed -0.3 dBFS"
    }
  },
  "threshold_preset": "reverb_architecture",
  "baseline_tracking": {
    "enabled": true
  },
  "pass_criteria": "Monument produces finite output for impulse stimulus"
}
